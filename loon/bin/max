#!/usr/bin/env node
var commander = require("commander");
var inquirer  = require("inquirer");

/*
inquirer.prompt([{
    type: 'confirm',
    name: 'compass',
    message: 'Would you like to use Sass (with Compass)?',
    default: true
  }], function (props) {
		pushDev();
  });
*/
function pushDev() {
	inquirer.prompt([{
	    type: 'checkbox',
	    name: 'devProject',
	    message: '请选择您要上传的项目：',
	    choices: [
	    {
	    	value:"common",
	    	name :"common pro",
	    	checked: false
	    },
	    {
	    	value:"toefl",
	    	name :"toefl pro",
	    	checked: false
	    },
	    {
	    	value:"toefl_exam",
	    	name :"toefl exam pro",
	    	checked: false
	    },
	    {
	    	value:"toefl_spoken",
	    	name :"toefl spoken pro",
	    	checked: false
	    }
	    ],
	    default: true
	  }], function (devProject) {
			//console.log(devProject);
	  });
}

var fs = require("fs");
var cwd = process.cwd();
var dirs = fs.readdirSync(cwd);
var dirList = [];

dirs.forEach(function(d){
	var staSync = fs.statSync(cwd + "/" + d);
	if(staSync.isFile()) {
		console.log("file   " + d);
	} else if(staSync.isDirectory) {
		dirList.push(d);
		console.log("dir    " + d);
	}
});

commander
  .version("0.0.2")
  .option('create [env]', "create new project")
  .command('create')
  .description('create new project')
  .action(function(dir){
  	console.log("dir:",dir);
  })
  ;
  
commander
  .command('setup [env]')
  .description('run setup commands for all envs')
  .option("-s, --setup_mode [mode]", "Which setup mode to use")
  .action(function(env, options){
    var mode = options.setup_mode || "normal";
    env = env || 'all';
    console.log('setup', env, mode);
  })
  ;
commander.parse(process.argv);